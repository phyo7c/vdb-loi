<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	    <record id="hr_employee_inherit_form_view" model="ir.ui.view">
			<field name="name">hr.employee.form</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form" />
			<field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(action_change_permanent)d" type="action" states="probation,extend_probation" class="oe_highlight" string="Permanent"/>
                    <field name="state" widget="statusbar" statusbar_visible="probation,permanent,extend_probation"/>
                    <button name="%(action_extend_probation)d" type="action" states="probation" class="oe_highlight" string="Extend Probation"/>
                </xpath>
            </field>
        </record>

        <record id="hr_employee_inherit_form_view_permanent" model="ir.ui.view">
            <field name="name">hr.employee.form.permanent</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr_localization.hr_employee_inherit_form_view" />
			<field name="arch" type="xml">
                <xpath expr="//field[@name='confirmation_date']" position="after">
                    <field name="permanent_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
