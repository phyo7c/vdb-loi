<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_report_payroll_wizard_wizard" model="ir.ui.view">
            <field name="name">Payroll Report Wizard Form</field>
            <field name="model">report.payroll.wizard</field>
            <field name="arch" type="xml">
                <form string="Payroll Report">
                    <sheet>
                        <group col="4">
                            <field name="month"/>
                            <field name="year"/>
                            <field name="date_from" visible="1"/>
                            <field name="date_to" visible="1"/>
                            <field name="department_id"/>
                        </group>
                        <footer>
                            <button name="print_xlsx" string="Generate" type="object" class="oe_highlight"/>
                            or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_report_payroll_wizard">
            <field name="name">Payroll Report</field>
            <field name="res_model">report.payroll.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="hr_menu_payroll_report"
                  action="action_report_payroll_wizard"
                  name="Payroll Report"
                  parent="hr_payroll.menu_hr_payroll_report"
                  groups="hr_payroll.group_hr_payroll_manager"
                  sequence="11"
        />

    </data>
</odoo>