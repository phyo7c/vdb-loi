<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_report_pay_wizard_wizard" model="ir.ui.view">
            <field name="name">Pay Report Wizard Form</field>
            <field name="model">report.pay.wizard</field>
            <field name="arch" type="xml">
                <form string="Pay Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="subarea_id"/>
                                <field name="department_id"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                                <field name="employee_id"/>
                            </group>
                        </group>
                        <footer>
                            <button name="print_xlsx" string="Generate" type="object" class="oe_highlight"/>
                            or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_report_pay_wizard">
            <field name="name">Pay Report</field>
            <field name="res_model">report.pay.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="hr_menu_pay_report"
                  action="action_report_pay_wizard"
                  name="Pay Report"
                  parent="hr_payroll.menu_hr_payroll_report"
                  groups="hr_payroll.group_hr_payroll_manager"
                  sequence="12"
        />

    </data>
</odoo>