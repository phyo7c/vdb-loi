<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_hr_education_tree">
                    <field name="name">hr.education.tree</field>
                    <field name="model">hr.education</field>
                    <field name="type">tree</field>
                    <field name="arch" type="xml">
                        <tree string="Education">
                                <field name="name" />
                                <field name="education" />
                        </tree>
                    </field>
                </record>

        <record model="ir.ui.view" id="view_hr_education_form">
            <field name="name">hr.education.form</field>
            <field name="model">hr.education</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Education" >
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="education" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="open_view_hr_education_form">
            <field name="name">Education</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.education</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_education_tree" />
        </record>

        <menuitem id="menu_hr_education" name="Education" parent="hr.menu_human_resources_configuration_employee"
            action="open_view_hr_education_form" />
    </data>
</odoo>