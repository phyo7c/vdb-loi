<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="custom_hr_employee_form" model="ir.ui.view">
			<field name="name">custom.hr.employee.form</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='certificate']" position="after">
					<field name="education"/>
				</xpath>
				<xpath expr="//field[@name='study_school']" position="attributes">
					<attribute name="string">School / University</attribute>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
