<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_report_employee_movement_wizard" model="ir.ui.view">
            <field name="name">Employee Movement Report Wizard Form</field>
            <field name="model">report.employee.movement.wizard</field>
            <field name="arch" type="xml">
                <form string="Employee Movement Report">
                    <sheet>
                        <group col="4">
                            <field name="month"/>
                            <field name="year"/>
                            <field name="date_from" visible="1"/>
                            <field name="date_to" visible="1"/>
                        </group>
                        <footer>
                            <button name="print_xlsx" string="Generate" type="object" class="oe_highlight"/>
                            or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_employee_movement_report_wizard">
            <field name="name">Employee Movement Report</field>
            <field name="res_model">report.employee.movement.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="hr_menu_employee_movement_report"
                  action="action_employee_movement_report_wizard"
                  name="Employee Movement Report"
                  parent="hr.menu_hr_root"
                  groups="hr.group_hr_user"
                  sequence="11"
        />

    </data>
</odoo>