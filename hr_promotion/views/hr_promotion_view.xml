			sequence="1" />

		<menuitem id="menu_employee_promotion" name="Promotions"
			parent="hr_promotion.menu_parent_promotion" groups="hr.group_hr_user"
			action="action_employee_promotion" sequence="1" />

		<menuitem id="menu_employee_demotion" name="Demotions"
