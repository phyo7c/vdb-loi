		<record model="ir.ui.view" id="view_employee_promotion_tree">
			<field name="name">hr.promotion.tree</field>
			<field name="model">hr.promotion</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Promotion/Demotion">
					<field name="name" />
					<field name="employee_id" />
					<field name="date" />
					<field name="company_id" />
					<field name="new_company_id" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_employee_promotion_form">
			<field name="name">hr.promotion.form</field>
			<field name="model">hr.promotion</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Promotion/Demotion" duplicate="false">
					<header>
						<button name="button_request" states="draft" string="Request"
							type="object" class="oe_highlight" groups="hr.group_hr_user" />
						<!--<button name="button_approve" attrs="{'invisible': ['|', ('state', 
							'!=', 'request'), ('allow_immediate_approve', '=', False)]}" string="Immediate 
							Approve" type="object" class="oe_highlight" groups="hr.group_hr_manager"/> -->
						<button name="button_first_approve" states="request"
							string="First Approve" type="object" class="oe_highlight" />
						<button name="button_approve" states="first_approve"
							string="Immediate Approve" type="object" class="oe_highlight" />
						<button name="cancel_request" states="draft,request"
							string="Cancel" type="object" groups="hr.group_hr_manager" />
						<button name="button_done" states="approve" string="Done"
							type="object" class="oe_highlight" groups="hr.group_hr_manager" />
						<button name="button_draft" states="cancel" string="Reset to Draft"
							type="object" class="btn-secondary" groups="hr.group_hr_user" />
						<field name="state" widget="statusbar"
							statusbar_visible="draft,request,first_approve,approve,done" />
						<field name="allow_immediate_approve" invisible="1" />
					</header>
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="promotion_no" readonly="1" nolabel="1" />
							</h1>
						</div>
						<h2>
							<field name="type" widget="radio" nolabel="1"
								options="{'horizontal': true}" attrs="{'readonly': [('state', '!=', 'draft')]}" />
						</h2>
						<group>
							<group>
								<field name="skip_head_count" attrs="{'invisible': [('type', '!=', 'transfer')]}" />
								<field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}" />
								<field name="company_id" groups="base.group_multi_company"
									readonly="1" force_save="1" />
								<field name="department_id" readonly="1" force_save="1" />
								<field name="job_id" readonly="1" force_save="1" />
								<field name="job_grade_id" invisible ="1" readonly="0" force_save="1" />
								<field name="salary_level_id"  invisible ="1" readonly="0" force_save="1" />
								<field name="struct_id" invisible ="1" readonly="0" force_save="1" />
								<field name="resource_calendar_id" readonly="1"
									force_save="1" />

								<field name="wage" readonly="1" force_save="1" />
								<field name="approved_manager_id" readonly="1" force_save="1" />

								<field name="requested_employee_id" readonly="1"
									attrs="{'invisible': [('requested_employee_id', '=', False)]}" />
								<field name="approved_employee_id" readonly="1"
									attrs="{'invisible': [('approved_employee_id', '=', False)]}" />
							</group>
							<group>
								<field name="company_id" groups="base.group_multi_company"
									readonly="1" force_save="1" invisible="1" />
								<field name="department_id" readonly="1" force_save="1"
									invisible="1" />

								<field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}" />
								<field name="new_company_id" required="1"
									groups="base.group_multi_company"
									attrs="{'readonly': ['|',('type','=','salary_change'),('state', '!=', 'draft')]}"
									force_save="1" />

								<!-- <field name="new_branch_id" required="1" domain="['|', ('company_id', 
									'=', False), ('company_id', '=', new_company_id)]" attrs="{'readonly': ['|',('type','=','salary_change'),('state', 
									'!=', 'draft')]}" force_save="1"/> -->
								<!-- <field name="new_department_id" required="1" domain="['|', ('branch_id', 
									'=', False), ('branch_id', '=', new_branch_id)]" attrs="{'readonly': ['|',('type','=','salary_change'),('state', 
									'!=', 'draft')]}" force_save="1"/> -->
								<field name="new_department_id" required="1"
									attrs="{'readonly': ['|',('type','=','salary_change'),('state', '!=', 'draft')]}"
									force_save="1" />
								<!-- <field name="new_job_id" required="1" domain="['|', ('branch_id', 
									'=', False), ('branch_id', '=', new_branch_id)]" attrs="{'readonly': ['|',('type','=','salary_change'),('state', 
									'!=', 'draft')]}" force_save="1"/> -->
								<field name="new_job_id" required="1"
									attrs="{'readonly': ['|',('type','=','salary_change'),('state', '!=', 'draft')]}"
									force_save="1" />

								<field name="new_job_grade_id" invisible ="1" readonly="0" />
								<field name="new_salary_level_id"  invisible ="1" readonly="0"/>
								<field name="new_struct_id" invisible ="1" readonly="0" />
								<field name="new_resource_calendar_id" required="1" />
								<field name="new_wage" required="1" readonly="0"
									force_save="1" />
								<field name="responsible" options="{'no_create': True}"
									invisible="1" />
								<field name="new_approved_manager_id" required="1"
									domain="[('company_id', '=', new_company_id)]"
									attrs="{'readonly': ['|',('type','=','salary_change'),('state', '!=', 'draft')]}"
									force_save="1" />
							</group>
						</group>
						<notebook colspan="4">
							<page string="Internal Notes">
								<field name="note" />
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="open_view_employee_promotion_form">
			<field name="name">Promotions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.promotion</field>
			<field name="view_mode">tree,form</field>
